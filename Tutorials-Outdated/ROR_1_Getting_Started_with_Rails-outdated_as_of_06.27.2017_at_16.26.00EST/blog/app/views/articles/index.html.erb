<h1>Listing articles</h1>

<%= link_to 'New article', new_article_path %>

<!-- The above link creates a way to bring up the form to create a new article -->

<table>
	<tr>
		<th>Title</th><br>
		<th>Text</th>
	</tr>

<% @articles.each do |article| %>
	<tr>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
		<td><%= link_to 'Show', article_path(article) %></td>
	</tr>
<% end %>
</table>